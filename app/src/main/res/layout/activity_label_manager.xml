<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F5F7FA">
    <include layout="@layout/layout_label_manager_title" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#FFFFFFFF">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="21dp"
            android:text="按住卡片拖动调整排列顺序"
            android:textColor="#FFBBBBBB"
            android:textSize="15sp"
            android:layout_marginLeft="12dp"
            android:layout_centerVertical="true"/>
        <Button
            android:id="@+id/addLabel"
            android:layout_width="70dp"
            android:layout_height="34dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="12dp"
            android:text="@string/add"
            android:textSize="14sp"
            android:textColor="#1B5AD0"
            android:layout_centerVertical="true"
            android:background="#ffffff"
            />
    </RelativeLayout>
    <include
        android:id="@+id/no_label"
        layout="@layout/layout_no_label"
        android:visibility="gone"/>
    <com.uyun.hummer.view.SwipeRecyclerView
        android:id="@+id/swipeRecycleView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </com.uyun.hummer.view.SwipeRecyclerView>
</LinearLayout>
