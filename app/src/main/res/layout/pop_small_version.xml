<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">
    <LinearLayout
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_corner"
        android:orientation="vertical"
        android:gravity="center_horizontal">
        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:textColor="#2B2F33"
            android:textSize="16sp"
            android:text="@string/update_hint"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#999999"
            android:textSize="13sp"
            android:layout_marginTop="12sp"
            android:text="@string/update_hint_content"/>
        <View
            android:layout_width="250dp"
            android:layout_height="0.5dp"
            android:background="#E1E3E6"
            android:layout_marginTop="20dp"/>
        <LinearLayout
            android:layout_width="250dp"
            android:layout_height="44dp"
            android:orientation="horizontal"
            >
            <Button
                android:id="@+id/next_time"
                android:layout_width="125dp"
                android:layout_height="44dp"
                android:background="#00000000"
                android:text="@string/next_time"
                android:gravity="center"
                android:textColor="#2B2F33"
                android:textSize="16sp"/>
            <View
                android:layout_width="0.5dp"
                android:layout_height="44dp"
                android:background="#E1E3E6"/>
            <Button
                android:id="@+id/update_now"
                android:layout_width="124.5dp"
                android:layout_height="44dp"
                android:background="#00000000"
                android:text="@string/update_now"
                android:gravity="center"
                android:textSize="16sp"
                android:textColor="#4083FF"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>